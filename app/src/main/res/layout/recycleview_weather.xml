<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200sp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/weather_time"
        android:layout_width="129dp"
        android:layout_height="101dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="weather_time"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/weather_symbol"
        android:layout_width="120dp"
        android:layout_height="101dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/weather_time"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="@+id/weather_time"
        app:layout_constraintTop_toBottomOf="@+id/weather_time"
        app:srcCompat="@drawable/cloud_icon" />

    <TextView
        android:id="@+id/weather_temperature"
        android:layout_width="120dp"
        android:layout_height="88dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="temperature"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/weather_symbol"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/weather_symbol"
        app:layout_constraintTop_toBottomOf="@+id/weather_symbol" />
</androidx.constraintlayout.widget.ConstraintLayout>