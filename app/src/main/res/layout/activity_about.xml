<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/aboutbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="28dp"
        android:text="首页"
        android:textSize="20sp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/aboutbutton2"
        android:layout_width="102dp"
        android:layout_height="47dp"
        android:layout_marginStart="40dp"
        android:text="视频"
        android:textSize="20sp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/aboutbutton"
        app:layout_constraintStart_toEndOf="@+id/aboutbutton"
        app:layout_constraintTop_toTopOf="@+id/aboutbutton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/aboutbutton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="关于APP"
        android:textSize="20sp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/aboutbutton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/aboutbutton2"
        app:layout_constraintTop_toTopOf="@+id/aboutbutton2"
        app:layout_constraintVertical_bias="1.0" />

    <WebView
        android:id="@+id/webview1"
        android:layout_width="403dp"
        android:layout_height="643dp"
        android:background="@drawable/weather_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>